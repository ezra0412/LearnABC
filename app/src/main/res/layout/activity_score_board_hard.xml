<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Score_board_hard">

    <ImageView
        android:id="@+id/img_scoreBoard_background_hard"
        android:layout_width="480dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/whiteboard_bg_result" />

    <TextView
        android:id="@+id/tv_scoreBord_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score board hard"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_scoreBoard_background_hard"
        app:layout_constraintEnd_toEndOf="@+id/img_scoreBoard_background_hard"
        app:layout_constraintStart_toStartOf="@+id/img_scoreBoard_background_hard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/img_championCup_hard"
        android:layout_width="182dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toTopOf="@+id/bg_score1_hard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scoreBord_hard"
        app:layout_constraintVertical_bias="0.289"
        app:srcCompat="@drawable/champion_cup" />

    <ImageView
        android:id="@+id/bg_score3_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_scoreBoard_background_hard"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_score2_hard"
        app:layout_constraintVertical_bias="0.162"
        app:srcCompat="@drawable/rank3" />

    <ImageView
        android:id="@+id/bg_score2_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_score1_hard"
        app:layout_constraintVertical_bias="0.099"
        app:srcCompat="@drawable/rank2" />

    <ImageView
        android:id="@+id/img_silver_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="@+id/img_scoreBoard_background_hard"
        app:layout_constraintTop_toBottomOf="@+id/img_gold_hard"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@drawable/silver" />

    <ImageView
        android:id="@+id/bg_score1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rank1" />

    <ImageView
        android:id="@+id/img_gold_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488"
        app:srcCompat="@drawable/gold" />

    <TextView
        android:id="@+id/tv_place_1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_1_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score1_hard"
        app:layout_constraintStart_toStartOf="@+id/bg_score1_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score1_hard"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/tv_score_1_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score1_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score1_hard"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/bg_score1_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score1_hard"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/tv_place_2_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_2_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score2_hard"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/bg_score2_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score2_hard"
        app:layout_constraintVertical_bias="0.692" />

    <TextView
        android:id="@+id/tv_score_2_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score2_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score2_hard"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/bg_score2_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score2_hard"
        app:layout_constraintVertical_bias="0.847" />

    <ImageView
        android:id="@+id/img_copper_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_silver_hard"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/copper" />

    <TextView
        android:id="@+id/tv_score_3_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score3_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score3_hard"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/bg_score3_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score3_hard"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/tv_place_3_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_3_hard"
        app:layout_constraintEnd_toEndOf="@+id/bg_score3_hard"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/bg_score3_hard"
        app:layout_constraintTop_toTopOf="@+id/bg_score3_hard"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/br_back_hard"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_scoreBord_hard"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:srcCompat="@drawable/arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>