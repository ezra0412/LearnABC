<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoard">

    <ImageView
        android:id="@+id/img_scoreBoard_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whiteboard_bg_result" />

    <ImageView
        android:id="@+id/bg_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_score1"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@drawable/rank2" />

    <ImageView
        android:id="@+id/img_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="@+id/img_scoreBoard_background"
        app:layout_constraintTop_toBottomOf="@+id/img_gold"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/silver" />

    <TextView
        android:id="@+id/tv_scoreBord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score board"
        android:textColor="@color/White"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_scoreBoard_background"
        app:layout_constraintEnd_toEndOf="@+id/img_scoreBoard_background"
        app:layout_constraintStart_toStartOf="@+id/img_scoreBoard_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/img_championCup"
        android:layout_width="182dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toTopOf="@+id/bg_score1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scoreBord"
        app:layout_constraintVertical_bias="0.289"
        app:srcCompat="@drawable/champion_cup" />

    <ImageView
        android:id="@+id/bg_score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rank1" />

    <ImageView
        android:id="@+id/bg_score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_scoreBoard_background"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_score2"
        app:layout_constraintVertical_bias="0.213"
        app:srcCompat="@drawable/rank3" />

    <ImageView
        android:id="@+id/img_copper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_silver"
        app:layout_constraintVertical_bias="0.119"
        app:srcCompat="@drawable/copper" />

    <TextView
        android:id="@+id/tv_score_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score3"
        app:layout_constraintEnd_toEndOf="@+id/bg_score3"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/bg_score3"
        app:layout_constraintTop_toTopOf="@+id/bg_score3"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/tv_place_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_3"
        app:layout_constraintEnd_toEndOf="@+id/bg_score3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/bg_score3"
        app:layout_constraintTop_toTopOf="@+id/bg_score3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/img_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473"
        app:srcCompat="@drawable/gold" />

    <TextView
        android:id="@+id/tv_place_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_1"
        app:layout_constraintEnd_toEndOf="@+id/bg_score1"
        app:layout_constraintStart_toStartOf="@+id/bg_score1"
        app:layout_constraintTop_toTopOf="@+id/bg_score1"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/tv_score_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score1"
        app:layout_constraintEnd_toEndOf="@+id/bg_score1"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/bg_score1"
        app:layout_constraintTop_toTopOf="@+id/bg_score1"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/tv_place_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player  ()"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_score_2"
        app:layout_constraintEnd_toEndOf="@+id/bg_score2"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/bg_score2"
        app:layout_constraintTop_toTopOf="@+id/bg_score2"
        app:layout_constraintVertical_bias="0.727" />

    <TextView
        android:id="@+id/tv_score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_score2"
        app:layout_constraintEnd_toEndOf="@+id/bg_score2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/bg_score2"
        app:layout_constraintTop_toTopOf="@+id/bg_score2"
        app:layout_constraintVertical_bias="0.844" />

    <ImageView
        android:id="@+id/br_back"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_scoreBord"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>